@page "/Index"
@page "/Index/{UserID}"

@using PundoPH.Model;
@using PundoPH.Pages.Components;
@using System.Text.Json
@using PundoPH.Data
@using PundoPH.Helper

@inject IJSRuntime JSRuntime
@inject UserService UserService
@inject NavigationManager NavigationManager
@inject LoginHelper LoginHelper


<PageTitle>Index</PageTitle>
<h1>Hello @CurrentUser?.FirstName , welcome to PundoPH!</h1>
Welcome to your online "Pundo" savings.

@code{
    [Parameter]
    public string UserID { get; set; }
    private User? CurrentUser;

    protected override async Task OnInitializedAsync()
    {
        string token = await JSRuntime.InvokeAsync<string>("sessionStorage.getItem", "Token");
        if (!string.IsNullOrEmpty(token))
        {
            string userData = await JSRuntime.InvokeAsync<string>("sessionStorage.getItem", "currentUser");

            if (!string.IsNullOrEmpty(userData))
            {
                UserService.CurrentUser = JsonSerializer.Deserialize<User>(userData);
                CurrentUser = UserService.CurrentUser;
            }
        }
        else 
        {
            NavigationManager.NavigateTo("/");
        }
    }
}
